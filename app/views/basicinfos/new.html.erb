<head>

	<script type="text/javascript">

   		function optionchangeforcitizenship(){
    		var change = document.getElementById("mycitizenship").value;

    		if(change.match(/philippines/gi)){
		    	document.getElementById("citizenshipimg").src = "/images/ph.png";
		    }else if(change.match(/bahrain/gi)){
				document.getElementById("citizenshipimg").src = "/images/bh.png";
			}else if(change.match(/bangladesh/gi)){
				document.getElementById("citizenshipimg").src = "/images/bng.png";
			}else if(change.match(/cambodia/gi)){
				document.getElementById("citizenshipimg").src = "/images/cd.png";
			}else if(change.match(/chin/gi)){
				document.getElementById("citizenshipimg").src = "/images/chn.png";
			}else if(change.match(/india/gi)){
				document.getElementById("citizenshipimg").src = "/images/in.png";
			}else if(change.match(/iran/gi)){
				document.getElementById("citizenshipimg").src = "/images/iran.png";
			}else if(change.match(/japan/gi)){
				document.getElementById("citizenshipimg").src = "/images/Japan.png";
   			}else{
   				document.getElementById("citizenshipimg").src = "/images/default.png";
   			}
   		}

	</script>

